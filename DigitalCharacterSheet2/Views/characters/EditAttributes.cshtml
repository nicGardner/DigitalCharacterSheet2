@model DigitalCharacterSheet2.Models.attribute
@{
    ViewBag.Title = "EditAttributes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Attribute</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@Html.DisplayFor(model => Model.attributeName)</h4>
    <hr />
    <!--selects the character being edited-->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.characterName)
    @Html.HiddenFor(model => model.attributeName)



    <!-- text field for the attribute value-->
    <div class="form-group">
        @Html.DisplayFor(model => Model.attributeName)
        <div class="col-md-10">
            @Html.EditorFor(model => Model.attributeValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.attributeValue, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


